<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:duplicateParentState="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".55"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivProfilePic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/profile_img"
                        android:scaleType="centerCrop" />

                    <Button
                        android:layout_width="20dp"
                        android:layout_height="10dp"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/edit_profile_pic"
                        android:backgroundTint="#0c53a0"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="5sp" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProfileDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight=".4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left|center"
                android:text="User Name"
                android:textColor="@color/blue_shade2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="user@dxminds.com"
                android:textColor="@color/black_shade2"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="1234567891"
                android:textColor="@color/black_shade2"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEditProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight=".6"
            android:gravity="center|bottom"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/imgBtnEditProfile"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/edit_button" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4A4A4A" />
</LinearLayout>